<%= form_for @desserts do |r| %>
  <%= r.label :name %>
  <%= r.text_field :name %>
  <br>
  <%= r.label :description %>
  <%= r.text_field :description %>
  <br>
  <%= r.label :instructions %>
  <%= r.text_field :instructions %>
  <br>
  <%= r.label :image %>
  <%= r.text_field :image %>
  <%= r.submit 'Create Dessert!' %>
<% end %>